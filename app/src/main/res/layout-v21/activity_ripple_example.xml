<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?colorPrimary"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ripple_example_layout">

            <TextView
                android:id="@+id/sample_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="With Ripple"/>

            <TextView
                android:id="@+id/sample_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="With Ripple"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/floatingButton1"
            android:layout_width="@dimen/fab_height"
            android:layout_height="@dimen/fab_height"
            android:layout_gravity="bottom|right"
            android:elevation="8dp"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/keyline_1"
            android:stateListAnimator="@animator/fab_anim"
            android:background="@drawable/ripple_example_fab1"
            android:src="@drawable/ic_action_search_white"/>

    </FrameLayout>

</LinearLayout>